<header>
    <nav class="navbar navbar-airtest">
      <div class="container-fluid">
        <div class="navbar-header">
        <ul class="nav navbar-nav">
        <li class="logo"><%=link_to "AirTests", root_path%></li>
        </ul>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user.nil? %>
          <li>
            <%= link_to user_session_path do %>
            <%= t('login') %> <i class="fa fa-sign-in"></i> 
            <% end %>
          </li>
         <% else %>
          <% if current_user != nil and current_user.admin %>
            <li>
            <%= link_to new_question_path do%>
            <%= t('Add question') %> <i class="fa fa-plus-circle"></i> 
            <% end %>
           </li>
          <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= t('logout') %> <i class="fa fa-sign-out"></i> 
            <% end %>
          </li>
        <% end %>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
  </header>